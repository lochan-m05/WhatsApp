# WhatsApp Bulk Messaging System - Environment Configuration
# Copy this file to .env and modify the values as needed

# Chrome Profile Path (optional - uses default if not set)
# CHROME_PROFILE_PATH=/path/to/chrome/profile

# Default Country Code for Phone Numbers
DEFAULT_COUNTRY_CODE=+91

# Message Delays (in seconds)
MESSAGE_DELAY=3
WAIT_TIME=20

# Headless Mode (true/false)
HEADLESS_MODE=false

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Default Institution Name
INSTITUTION_NAME=Placement Cell

# Default Reminder Days Before Deadline
REMINDER_DAYS_BEFORE=7,3,1

# Maximum Messages Per Session (to avoid being blocked)
MAX_MESSAGES_PER_SESSION=100

# Time to wait between sessions (in minutes)
SESSION_BREAK_TIME=60
